<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chat.chatbot.ChatbotApp">
    <center>
        <TextArea fx:id="chatArea" editable="false" wrapText="true" />
    </center>
    <bottom>
        <HBox spacing="10" padding="10">
            <TextField fx:id="inputField" HBox.hgrow="ALWAYS" />
            <Button text="Send" fx:id="sendButton" />
        </HBox>
    </bottom>
</BorderPane>
